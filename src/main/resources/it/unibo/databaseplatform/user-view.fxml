            <Button mnemonicParsing="false" onAction="#reviewDish" styleClass="normal" text="Recensisci piatto" />
            <Button mnemonicParsing="false" onAction="#showOrdersInformation" styleClass="normal" text="Visualizza ordini effettuati" />
            <Button mnemonicParsing="false" onAction="#generateDiscountView" styleClass="normal" text="Genera buono sconto" />
